//MANIFEST REFERENCE: https://docs.microsoft.com/en-us/vsts/extend/develop/manifest?view=vsts
//ADDITIONAL HELP: https://docs.microsoft.com/en-us/vsts/extend/develop/add-dashboard-widget?view=vsts

// ALL COMMENTS BELOW ARE FROM THE TEMPLATE AUTHOR, AND WHILST TAKEN FROM THE MANIFEST REFERENCE CANNOT BE GAURANTEED TO BE UP-TO-DATE WITH THE OFFICIAL MICROSOFT DOCUMENTATION.

{
    //REQUIRED ATTRIBUTES: https://docs.microsoft.com/en-us/vsts/extend/develop/manifest?view=vsts#required-attributes
    "manifestVersion": 1, //always 1
    "id": "YourWidgetId-UniqueAmongExtensionsFromSamePublisher", //appears in extension page url
    "version": "0.0.1",
    "name": "Your Widget Name", //name that appears in vsmp search results (truncated)
    "publisher": "YourWidgetPublisher", //appears in extension page url

    //TARGETS: https://docs.microsoft.com/en-us/vsts/extend/develop/manifest?view=vsts#installation-targets
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],

    //DISCOVERY ATTRIBUTES: https://docs.microsoft.com/en-us/vsts/extend/develop/manifest?view=vsts#discovery-attributes
    "description": "Your widget description (brief free-text description)", //desc that appears in vsmp search results (truncated) and top of extension specific page
    "icons": {
        "default": "app/Images/DefaultIcon.png" //128px x 128px of type BMP, GIF, EXIF, JPG, PNG and TIFF
    },
    "categories": [
        //Categories are not free text - see the manifest reference
        "Developer samples"
    ],
    "tags": [
        //Tags are free text
        "YourWidgetTag1",
        "YourWidgetTag2",
        "YourWidgetTag3"
    ],
    "links": {
        "home": {
            //two examples
            "uri": "https://marketplace.visualstudio.com/items?itemName=YourWidgetPublisher.YourWidgetId-UniqueAmongExtensionsFromSamePublisher"
            //"uri": "https://www.fabrikam-fiber-inc.com"
        },
        "getstarted": {
            "uri": "https://www.fabrikam-fiber-inc.com/help/getstarted"
        },
        "learn": {
            "uri": "https://www.fabrikam-fiber-inc.com/features" //appears bottom right hand side of extension specific page
        },
        "support": {
            "uri": "https://www.fabrikam-fiber-inc.com/support" //appears bottom right hand side of extension specific page
        },
        "repository": {
            "uri": "https://github.com/fabrikam-fiber-inc/tools"
        },
        "issues": {
            "uri": "https://github.com/fabrikam-fiber-inc/tools/issues"
        }
    },
    "screenshots": [
        {
            "path": "artefacts/Screenshot.png" //1366px x 768px    //appears right hand side of extension specific page, part thereof, when clicked opens full screen
        }
    ],
    "branding": { //top third colors in extension detail page
        "color": "rgb(1, 122, 215)",
        "theme": "dark"
    },
    //"repository": { //Include if you want to
    //    "type": "git",
    //    "uri": "https://github.com/fabrikam-fiber-inc/tools"
    //},

    //CONTRIBUTIONS: "https://docs.microsoft.com/en-us/vsts/extend/develop/manifest?view=vsts#contributions
    "contributions": [
        {
            "id": "Your_VSS.register_JavascriptFunctionCallParamaterValue",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog"
            ],
            "properties": {

                //CONTRIBUTIONS PROPERTIES: https://docs.microsoft.com/en-us/vsts/extend/develop/add-dashboard-widget?view=vsts#contributions
                "name": "YourWidgetContributionsPropertiesName", //appears RHS (header) when adding to the dashboard
                "description": "YourWidgetContributionsPropertiesDescription (brief free-text description)", //appears RHS (detail) when adding to the dashboard
                "catalogIconUrl:": "artefacts/CatalogIcon.png", //98px x 98px
                "previewImageUrl": "artefacts/PreviewIcon.png", //330px x 160px
                "uri": "app/dashboard-widget.html",
                "supportedSizes": [ //Array of sizes supported by your widget (first size in the array is the default). One row/column corresponds to 160px. Any dimension above 1x1 will get an additional 10px that represent the gutter between widgets. For example, a 3x2 widget will be 160*3+10*2 wide and 160*2+10*1 tall. The maximum supported size is 4x4.
                    {
                        "rowSpan": 2,
                        "columnSpan": 4
                    },
                    {
                        "rowSpan": 3,
                        "columnSpan": 3
                    }
                ],

                //SCOPES: https://docs.microsoft.com/en-us/vsts/extend/develop/manifest?view=vsts#scopes
                "supportedScopes": [ "project_team" ]

                //GREGT: https://docs.microsoft.com/en-us/vsts/extend/develop/add-dashboard-widget?view=vsts#step-8-configure-more-optional
                //"isNameConfigurable": true
            }
        }
    ],

    //FILES: https://docs.microsoft.com/en-us/vsts/extend/develop/manifest?view=vsts#files
    "files": [
        {
            "path": "app/dashboard-widget.html",
            "addressable": true
        },
        {
            "path": "app/Content",
            "addressable": true
        },
        {
            "path": "app/Images",
            "addressable": true
        },
        {
            "path": "app/Scripts",
            "addressable": true
        }
    ],
    "content": {
        "details": {
            "path": "artefacts/Overview.md" //longer desc that appears at bottom of extension specific page
        },
        "license": {
            "path": "artefacts/Licence.md"
        }
    }

    //GALLERY FLAGS (e.g. public, preview, paid): https://docs.microsoft.com/en-us/vsts/extend/develop/manifest?view=vsts#public-flag
    //"galleryFlags": [
    //    "Public"
    //]

    //BADGES: https://docs.microsoft.com/en-us/vsts/extend/develop/manifest?view=vsts#supported-badge-services
    //"badges": [
    //    {
    //        "href": "https://travis.ci/fabrikam-fiber-inc/myextension",
    //        "uri": "https://travis.ci/fabrikam-fiber-inc/myextension.svg?branch=master",
    //        "description": "TravisCI build for the project"
    //    },
    //    {
    //        "href": "https://ci.appveyor.com/projects/fabrikam-fiber-inc/myextension",
    //        "uri": "https://ci.appveyor.com/api/projects/status/vlg2sgs2y7tsdxpj4c?svg=true",
    //        "description": "AppVeyor build for the project"
    //    }
    //]
}